<%- model_class = TipoElemento -%>
<div class="page-header">
  <h1><%=t '.title', :default => @tipo_elemento.nombre %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @tipo_elemento.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @tipo_elemento.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:icono) %>:</strong></dt>
  <dd><%= @tipo_elemento.icono %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.Atras")),
              tipo_elementos_path, :class => 'btn btn-default'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.Eliminar")),
              tipo_elemento_path(@tipo_elemento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm",:default => 'Estas Seguro?')) },
              :class => 'btn btn-danger' %>
</div>
