<%- model_class = Registro -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:documento) %>:</strong></dt>
  <dd><%= @registro.documento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre_completo) %>:</strong></dt>
  <dd><%= @registro.nombre_completo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:numero_ficha) %>:</strong></dt>
  <dd><%= @registro.numero_ficha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @registro.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:genero) %>:</strong></dt>
  <dd><%= mostrar_genero(@registro.genero) %></dd>
</dl>

<div class="form-actions">
  <%= link_to '',registros_path, :class => ' fa-reply fa-2x'  %>
  <%= link_to '',edit_registro_path(@registro), :class => 'fa fa-edit fa-2x' %>
  <%= link_to '', registro_path(@registro),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estas Seguro?')) },
              :class => 'fa fa-trash-o fa-2x' %>
</div>
